{
  "name": "discourse-bot",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/bot.js",
  "scripts": {
    "start": "node -r dotenv/config dist/discord-bot.js",
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "ingest:docs": "tsx -r dotenv/config ingest-docs.ts",
    "ingest:crawl": "tsx -r dotenv/config ingest-crawler.ts",
    "remove:docs": "tsx -r dotenv/config remove-docs.ts",
    "remove:web": "tsx -r dotenv/config remove-web.ts",
    "setup:discord": "tsx -r dotenv/config setup-discord.ts",
    "deploy:commands": "tsx -r dotenv/config deploy-commands.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "A Discourse forum assistant bot.",
  "dependencies": {
    "@discordjs/rest": "^2.3.0",
    "@lancedb/lancedb": "^0.21.3",
    "axios": "^1.7.2",
    "better-sqlite3": "^12.2.0",
    "cheerio": "^1.1.2",
    "discord.js": "^14.15.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "html-to-text": "^9.0.5",
    "inquirer": "^12.9.6",
    "openai": "^4.52.7",
    "pdf-parse": "^1.1.1",
    "puppeteer": "^24.22.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.21",
    "@types/html-to-text": "^9.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^20.14.10",
    "@types/pdf-parse": "^1.1.5",
    "rimraf": "^5.0.7",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3"
  }
}
